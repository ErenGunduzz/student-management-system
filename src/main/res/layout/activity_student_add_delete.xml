<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".AddDeleteStudent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/add_student_activity_studentName"
                android:layout_width="350dp"
                android:layout_marginTop="50dp"
                android:hint="Eklenecek olan öğrencinin tam adını giriniz."
                android:textAlignment="center"
                android:layout_height="50dp"/>

            <EditText
                android:id="@+id/add_student_activity_studentNumber"
                android:layout_width="350dp"
                android:layout_marginTop="15dp"
                android:hint="Öğrencinin numarasını giriniz."
                android:textAlignment="center"
                android:layout_height="50dp"/>


            <EditText
                android:id="@+id/add_student_activity_studentClass"
                android:layout_width="350dp"
                android:layout_marginTop="15dp"
                android:hint="Öğrencinin sınıfını giriniz."
                android:textAlignment="center"
                android:layout_height="50dp"/>

            <Button
                android:id="@+id/OgrEkle"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="25dp"
                android:onClick="save_student"
                android:text="Ekle"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="19sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/OgrSil"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:onClick="delete_Student"
                android:text="Sil"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="19sp"
                android:textStyle="bold" />

        </LinearLayout>

    </RelativeLayout>

</ScrollView>